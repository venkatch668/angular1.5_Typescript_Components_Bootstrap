{
	"compilerOptions": {
		"module": "commonjs",
		"target": "es5",
		"noImplicitAny": false,
        "removeComments": true,
        "noLib": false,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "sourceMap": true,
		"moduleResolution": "node",
		"noEmitHelpers": true,
		 "typeRoots": [
            "../node_modules/@types"
        ]
	},
	"compileOnSave": false,
	"include": [
		"src/app/**/*"
	],
	"exclude": [
		"node_modules",
		"dist"
	]
}